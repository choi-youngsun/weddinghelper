{
  "env": {
    "browser": true,
    "es2021": true,
  },
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:prettier/recommended",
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "plugins": ["prettier", "react", "jsx-a11y", "@typescript-eslint", "import"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "warn",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/jsx-props-no-spreading": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "react/state-in-constructor": "off",
    "react/static-property-placement": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    "jsx-a11y/anchor-is-valid": "off",
    "react/require-default-props": "off",
    "import/extensions": "off",
    "react/display-name": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "prettier/prettier": "error",

    // 추가된 커스텀 규칙들 (Airbnb 스타일을 따르도록 설정)
    "import/no-unresolved": "error", // 'import/no-unresolved' 규칙을 추가
    "import/named": "error", // 'import/named' 규칙을 추가
    "import/default": "error", // 'import/default' 규칙을 추가
    "import/namespace": "error", // 'import/namespace' 규칙을 추가
    "react/jsx-no-bind": "warn", // JSX에 불필요한 바인딩을 하지 않도록 경고
    "react/jsx-closing-bracket-location": ["error", "line-aligned"], // JSX 태그의 닫는 괄호 위치 규칙
    "react/jsx-curly-newline": "off", // JSX에서 중괄호의 줄 바꿈 규칙
    "react/no-array-index-key": "error", // 배열 인덱스를 키로 사용하는 것을 방지
    "react/no-children-prop": "error", // children prop 사용을 금지
  },
}
